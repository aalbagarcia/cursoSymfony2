{% extends '::base.html.twig' %}
{% block body %}
    <header>

        {% block topnav %}
        <nav class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav">
                        <li><div id='logo'><img src="/images/static/logo.png"></div></li>
                        <li><a href="{{ path('homepage') }}">Inicio</a></li>
                        <li><a href="#">Buscar</a></li>
                        <li><a href="#">Acceso</a></li>
                    </ul>
                    <ul class="nav pull-right">
                        <li>
                            {% if is_granted('ROLE_USUARIO') %}
                                <a href="{{ path('Cursosf2UsuariosBundle_grupos') }}">{{ app.user }}</a>
                            {% else %}
                                <a href="{{ path('Cursosf2UsuariosBundle_login') }}">login</a>
                            {% endif %}
                        </li>
                        {% if is_granted('ROLE_USUARIO') %}
                        <li class="pull-left">
                            <a href="{{ path('Cursosf2UsuariosBundle_logout') }}">logout</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        {% endblock %}
    </header>
    {% block flash %}
        {% if app.session.hasFlash('success') %}
            <div class="alert alert-success">{{ app.session.getFlash('success') }}</div>
        {% endif %}
    {% endblock%}
    <article>
        {% block article %} {% endblock %}
    </article>

{% endblock %}