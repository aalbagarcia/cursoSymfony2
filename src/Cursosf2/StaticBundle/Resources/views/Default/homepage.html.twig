{% extends "::frontend_1col.html.twig" %}

{% block title%} Curso Symfony2 {% endblock %}

{% block article %}
<div id='contenedor'>

    <article class="portada row">
        <section class="proximas-reuniones span6">
            {% if proximasReuniones|length > 0 %}
                <h2>Próximas reuniones</h2>
                <ul>
                    {% for reunion in proximasReuniones %}
                        <li>
                            <div class="foto-elemento">
                                <img src="">
                            </div>
                            <div class="info-element">
                                <h4 class="nombre-elemento"> <a href="#">{{ reunion.nombre }}</a></h4>
                                <div>Grupo: {{ reunion.grupo.nombre }}</div>
                                <time datetime="{{ reunion.fechaReunion | date() }}">{{ reunion.fechaReunion | date() }}</time>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

        </section>

        <section class="buscar-reuniones span6">
            <h2>Buscar reuniones</h2>
        </section>
    </article>
     <article class="row">
         <section class="ultimas-reuniones span6">
             <h2>Últimas reuniones</h2>
         </section>
         <section class="ultimos-movimientos span6">
             <h2>Últimos movimientos</h2>
        </section>

    </article>
</div>

{% endblock %}